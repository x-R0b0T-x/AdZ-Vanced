<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Class="App1.MainPage">

    <!-- ðŸŒˆ DÃ©gradÃ© bleu â†’ mauve -->
    <Page.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#4A00E0" Offset="0.0"/> <!-- Bleu profond -->
            <GradientStop Color="#8E2DE2" Offset="1.0"/> <!-- Mauve -->
        </LinearGradientBrush>
    </Page.Background>

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="720" Height="820">
        <Border CornerRadius="16" Background="#1B1724" Opacity="0.94" Padding="28" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- ðŸŸ£ En-tÃªte -->
                <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,6,0,12">
                    <TextBlock Text="AdZ-Vanced" FontSize="42" FontWeight="Bold"
                               Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock Text="v1.3" FontSize="14" Foreground="#C0BFC2"
                               HorizontalAlignment="Center" Margin="0,6,0,0"/>
                </StackPanel>

                <!-- ðŸ’  Corps principal -->
                <StackPanel Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" Spacing="18">

                    <!-- Logo -->
                    <Border Width="210" Height="210" CornerRadius="14" Background="#0D0B10"
                            HorizontalAlignment="Center" VerticalAlignment="Top" >
                        <Image Stretch="Uniform" Margin="10"
                               Source="https://raw.githubusercontent.com/x-R0b0T-x/AdZ-Vanced/main/logo.png"/>
                    </Border>

                    <!-- Bloc d'information -->
                    <Border Background="#241E2A" CornerRadius="8" Padding="12" Width="520">
                        <TextBlock Text="Panneau de message informatif : PrÃªt Ã  optimiser votre connexion."
                                   Foreground="#E6E6E6" TextWrapping="Wrap"
                                   TextAlignment="Center" FontSize="15"/>
                    </Border>

                    <!-- Boutons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="18" Margin="0,6,0,0">
                        <Button Width="200" Height="48" FontWeight="Bold" Content="INSTALLER DNS"
                                Background="#8E5CFF" Foreground="White" BorderThickness="0"
                                Padding="8" CornerRadius="10"/>
                        <Button Width="200" Height="48" FontWeight="Bold" Content="RESTAURER DNS"
                                Background="#3A3543" Foreground="White" BorderThickness="0"
                                Padding="8" CornerRadius="10"/>
                    </StackPanel>

                    <!-- Zone de logs -->
                    <Border Background="#0B0A0E" CornerRadius="10" Padding="12"
                            Width="560" Height="150" Margin="0,6,0,0">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                            <StackPanel>
                                <TextBlock Text="LOG : Initialisation du systÃ¨me... OK"
                                           Foreground="#CFCFCF" FontFamily="Consolas" FontSize="13" Margin="0,2"/>
                                <TextBlock Text="LOG : VÃ©rification du systÃ¨me"
                                           Foreground="#CFCFCF" FontFamily="Consolas" FontSize="13" Margin="0,2"/>
                                <TextBlock Text="LOG : VÃ©rification des fichiers... TerminÃ©e"
                                           Foreground="#CFCFCF" FontFamily="Consolas" FontSize="13" Margin="0,2"/>
                                <TextBlock Text="LOG : En attente de la commande..."
                                           Foreground="#CFCFCF" FontFamily="Consolas" FontSize="13" Margin="0,2"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </StackPanel>

                <!-- âš™ï¸ Pied de page -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center"
                            Spacing="14" Margin="0,12,0,0">
                    <TextBlock Text="Donation" Foreground="#9B9AA0"/>
                    <TextBlock Text="Telegram" Foreground="#9B9AA0"/>
                    <TextBlock Text="Info" Foreground="#9B9AA0"/>
                    <TextBlock Text="Voir DNS" Foreground="#9B9AA0"/>
                    <TextBlock Text="Ouvrir Logs" Foreground="#9B9AA0"/>
                    <TextBlock Text="Fermer" Foreground="#9B9AA0"/>
                </StackPanel>

            </Grid>
        </Border>
    </Grid>
</Page>
